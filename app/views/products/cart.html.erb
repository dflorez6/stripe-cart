<section class="page-wrapper">
  <div class="container">

    <h1 class="uppercase font-bold mb-4">
      Cart
    </h1>

    <div class="flex flex-col">
      <% if @cart.empty? %>
      <p>
        No items in cart.
      </p>
      <% else %>
        <% @cart.each do |product| %>
          <div class="border-b-2 border-gray-200 p-2 flex justify-between">
            <div class="">
              <p>
                <%= product.name %>
              </p>
            </div>

            <div class="">
              <p class="font-semibold mr-4 inline-block">
                $<%= product.price_with_cents(product) %>
              </p>
              <p class="inline-block">
                <%= link_to remove_from_cart_path(product), class: '', method: :delete do %>
                  <%= heroicon "minus-circle", variant: :solid, options: { class: 'text-red-500 h-5 inline-block align-text-top' } %>
                <% end %>
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

  </div>
</section>